<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvBolso"
        app:cardBackgroundColor="@color/color_fodolightblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:padding="16dp"
    >
        <ImageView
                android:id="@+id/imgBolso"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bolsos">
        </ImageView>
        <TextView
                android:id="@+id/tittleBolso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imgBolso">
        </TextView>
        <TextView
                android:id="@+id/descriptionBolso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imgBolso"
                android:layout_below="@id/tittleBolso">
        </TextView>
        <TextView
                android:id="@+id/priceBolso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imgBolso"
                android:layout_below="@id/descriptionBolso">
        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>